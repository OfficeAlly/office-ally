{% extends "_layouts/main" %}

{% block main %}

<!-- testimonial-area start -->
<div class="testimonial-bg overlay section-ptb">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="testimonial-inner text-center">
                    <div class="test-cont">
                        <!-- <img src="assets/images/icon/2.png" alt=""> -->
                        <h2 class="white">{{ entry.title }}</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- testimonial-area end -->

<div class="container brands-logos">
    <div class="row">
        {% for block in entry.brands.all() %}
        {% if block.type == "brandImage" %}
        <div class="col-sm-33 col-md-20">
            <img class="brand-image" src="{{ block.brandImage.one().getUrl() }}" alt="{{ block.altField }}">
        </div>
        {% endif %}
        {% endfor %}
    </div>
</div>

<!-- banner-area start -->
<div class="banner-area">
    <div class="container">
        <div class="row">
            {% for block in entry.featuredSection.all() %}
            {% if block.type == "featuredSection" %}
            <div class="col-lg-4 col-md-4">
                <!-- single-banner start -->
                <div class="single-banner">
                    <div class="banner-bg">
                        <a href="shop.html"><img src="{{ block.featuredImage.one().getUrl() }}" alt="{{ block.altField }}"></a>
                    </div>
                    <div class="banner-contet">
                        <h3>{{ block.featuredTitle }}</h3>
                        <a href="products.html" class="btn-3">{{ block.featuredDescription }}</a>
                    </div>
                </div>
                <!-- single-banner end -->
            </div>
            {% endif %}
            {% endfor %}
        </div>
    </div>
</div>
<!-- banner-area end -->

<!-- product-area start -->
<div class="product-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- section-title start -->
                <div class="section-title">
                    <h2>{{ entry.productsTitle }}</h2>
                    <p>{{ entry.subtitle }}</p>
                </div>
                <!-- section-title end -->
            </div>
        </div>
        <!-- product-warpper start -->
        <div class="product-warpper">
            <div class="row">
                {% for entry in craft.entries.section('products').limit(90).all() %}
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <!-- single-product-wrap start -->
                    <div class="single-product-wrap">
                        <div class="product-image">
                            {% for block in entry.productDisplayImages.all() %}
                            {% if block.type == "angleImage" %}
                            <a class="img-bottom" href="{{ entry.url }}"><img src="{{ block.angleImage.one().getUrl() }}" alt="{{ block.angleAltField }}"></a>
                            {% endif %}
                            {% if block.type == "frontImage" %}
                            <a class="img-top" href="{{ entry.url }}"><img src="{{ block.frontImage.one().getUrl() }}" alt="{{ block.frontAltField }}"></a>
                            {% endif %}
                            {% endfor %}
                        </div>
                        <div class="product-content">
                            <h3><a href="product-details.html">{{ entry.title }}</a></h3>
                            <div class="price-box">
                                <!-- <span class="old-price">140.00</span> -->
                                <span class="new-price">${{ entry.productPrice }}</span>
                                <span>|</span>
                                <span class="qty">Qty {{ entry.productQuantity }}</span>
                            </div>
                        </div>
                    </div>
                    <!-- single-product-wrap end -->
                </div>
                {% endfor %}
            </div>
        </div>
        <!-- product-warpper end -->
    </div>
</div>
<!-- product-area end -->

{% include '_includes/testimonials/testimonials' %}

{% include '_includes/brands/brands' %}

{% endblock %}